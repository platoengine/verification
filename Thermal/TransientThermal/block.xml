<ParameterList name="Problem">
  <Parameter name="Physics" type="string" value="Plato Driver"/>
  <Parameter  name="Spatial Dimension"    type="int"    value="3"/>

  <Parameter name="Input Mesh" type="string" value="./block.exo"/>
  
  <ParameterList name="Plato Problem">
    <Parameter name="Physics"         type="string"  value="Thermal"/>
    <Parameter name="PDE Constraint"  type="string"  value="Parabolic"/>

    <Parameter name="Self-Adjoint"       type="bool"    value="false"/>

    <ParameterList name="Time Integration">
      <Parameter name="Number Time Steps" type="int" value="100"/>
      <Parameter name="Time Step" type="double" value="10.0"/>
    </ParameterList>

    <ParameterList name="Parabolic">
      <ParameterList name="Penalty Function">
        <Parameter name="Type" type="string" value="SIMP"/>
        <Parameter name="Exponent" type="double" value="1.0"/>
      </ParameterList>
    </ParameterList>

    <ParameterList name="Material Model">
      <ParameterList name="Thermal Mass">
        <Parameter  name="Mass Density" type="double" value="8920.0"/> 
        <Parameter  name="Specific Heat" type="double" value="385.185433"/>
      </ParameterList>
      <ParameterList name="Thermal Conduction">
	<Parameter name="Thermal Conductivity" type="double" value="397.48"/>
      </ParameterList>
    </ParameterList>
  
    <ParameterList  name="Computed Fields">
      <ParameterList  name="Initial Temperature">
	      <Parameter  name="Function" type="string"   value="-100*sin(3.14159*x)"/>
      </ParameterList>
    </ParameterList>

    <ParameterList  name="Initial State">
      <ParameterList  name="Temperature">
        <Parameter  name="Computed Field" type="string" value="Initial Temperature"/>
      </ParameterList>
    </ParameterList>

    <ParameterList  name="Essential Boundary Conditions">
      <ParameterList  name="Fixed Temperature Boundary Condition0">
        <Parameter  name="Type"     type="string" value="Zero Value"/>
        <Parameter  name="Sides"    type="string" value="x0"/>
      </ParameterList>
      <ParameterList  name="Fixed Temperature Boundary Condition1">
        <Parameter  name="Type"     type="string" value="Zero Value"/>
        <Parameter  name="Sides"    type="string" value="x1"/>
      </ParameterList>
    </ParameterList>

  </ParameterList>
</ParameterList>

